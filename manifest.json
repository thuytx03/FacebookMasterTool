{
  "name": "Facebook Tool",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Facebook Tool là công cụ lấy cookie, token, fb_dtsg.",
  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "activeTab",
    "webRequest",
    "notifications",
    "clipboardWrite",
    "declarativeNetRequest"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./scripts/contentScript.js"],
      "css": ["./styles/popup.css"]
    }
  ],
  "background": {
    "service_worker": "./scripts/background.js"
  },
  "action": {
    "default_title": "Facebook Tool",
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
